dark = #333

body
    margin 0
    padding 0
    background #DFDFDF
    width 100vw
    height 100vh
    display flex
    justify-content center
    align-items center
    color dark
    font-family 'Helvitica', 'Helvetica Neue', -apple-system, BlinkMacSystemFont, sans-serif
    .container
        // background rgba(0,0,0,0.1)
        display flex
        .leftBlock
            display flex
            flex-direction column
            justify-content center
            width 500px
            padding-right 192px
            margin-top -40px
            h1 
                font-size 96px
                line-height 120px
                margin 0px
                // font-weight 400
            p
                font-size 24px
                line-height 140%
                // font-weight 300
            .buttons
                margin-top 24px
                display flex
                .storeButton
                    line-height 64px
                    text-align center
                    // font-weight 300
                    text-transform uppercase
                    letter-spacing 3
                    width 240px
                    background dark
                    display block
                    // padding 16px 32px 16px 32px
                    color white
                    margin-right 16px
                    text-decoration none
                    font-size 16px
                    border-radius 8px
                    box-shadow 25px 25px 50px rgba(0,0,0,0.25)
        .rightBlock
            .screenshot
                width 400px
                height 712px
                // background rgba(0,0,0,0.2)
                border-radius 16px
                transform-style preserve-3d
                transform perspective(500px)
                // background-size cover
                // transform-style preserve-3d
                box-shadow 0px 50px 100px rgba(0,0,0,0.25)
                // transform perspective(500px)  rotateX(calc(var(--rx, 0) * 1deg)) rotateY(calc(var(--ry, 0) * 1deg)) translateZ(0);
                .layer1
                    background dark
                    border-radius 16px
                    width 100%
                    height 100%
                    position absolute
                    transform translateZ(0px)
                .layer2
                    background-image url("assets/brainy.png")
                    background-size cover
                    width 100%
                    height 100%
                    border-radius 16px
                    position absolute
                    transform translateZ(20px)


@media (max-width: 768px)
    .leftBlock
        width 100% !important
        padding 0 48px !important
    .rightBlock
        display none

@media (max-width: 480px)
    .buttons
        flex-direction column
        .storeButton
            width 100% !important
            margin-bottom 24px


@media (max-width: 375px)
    .leftBlock
        padding 0px 24px !important
        margin-top 24px !important
        h1 
            font-size 72px !important
        p
            font-size 20px !important